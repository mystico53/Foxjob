rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is accessing their own data
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Rules for the users collection and subcollections
    match /users/{userId} {
      // Allow users to read/write their own documents
      allow read, write: if isOwner(userId);
      
      // Rules for UserCollections subcollection (for resumes)
      match /UserCollections/{document=**} {
        allow read, write: if isOwner(userId);
      }
      
      // Rules for jobs subcollection
      match /jobs/{jobId} {
        allow read, write: if isOwner(userId);
      }
    }

    // Rules for test collection (for emulator testing)
    match /test/{docId} {
      // Allow authenticated users to read/write test documents
      allow read, write: if isAuthenticated();
    }

    // Development mode rules for testing (only active in emulator)
    match /dev-test/{docId} {
      allow read, write: if isAuthenticated();
    }

    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}